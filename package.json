{
  "name": "graphiql-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18",
    "npm": "9"
  },
  "scripts": {
    "precommit": "npm run format:check && npm run lint",
    "prepush": "npm run build && npm run test",
    "predeploy": "npm run precommit && npm run prepush",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "format:fix": "prettier --ignore-path ./.prettierignore --write .",
    "format:check": "prettier --ignore-path ./.prettierignore --check .",
    "e2e": "start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
    "e2e:headless": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e \"",
    "coverage": "npx nyc report --check-coverage --statements 80",
    "component": "cypress open --component",
    "component:headless": "nyc cypress run --component",
    "test": "NODE_ENV=test npm run e2e:headless && npm run coverage"
  },
  "dependencies": {
    "@auth/firebase-adapter": "^1.0.8",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "babel-plugin-istanbul": "^6.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "eslint-config-prettier": "^9.1.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.298.0",
    "firebase": "^10.7.1",
    "firebase-admin": "^11.11.1",
    "firebase-react-hooks": "^0.8.0",
    "next": "14.0.4",
    "next-auth": "^4.24.5",
    "next-themes": "^0.2.1",
    "node-fetch": "^3.3.2",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.49.0",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7",
    "yup": "^1.3.2",
    "yup-password": "^0.2.2"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.12.13",
    "@testing-library/cypress": "^10.0.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.2",
    "autoprefixer": "^10.0.1",
    "cypress": "^13.6.1",
    "dotenv": "^16.3.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "husky": "^8.0.0",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.0.2",
    "postcss": "^8",
    "prettier": "^3.0.3",
    "start-server-and-test": "^2.0.3",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
